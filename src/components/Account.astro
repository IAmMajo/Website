---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { Card } from "mdui/components/card";

interface Props {
  title: string;
  username: string;
  href: string;
  logoTitle?: string;
  inSubcategory?: boolean;
  invert?: boolean;
}

const {
  title,
  username,
  href,
  logoTitle = title,
  inSubcategory,
  invert,
} = Astro.props;

const Heading = inSubcategory ? "h4" : "h3";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../images/logos/**/*"
);
const logoTitleNoSpaces = logoTitle.replaceAll(" ", "-");
const imageName = logoTitleNoSpaces.toLowerCase().replaceAll(".", "");
const imagePath = `../images/logos/${imageName}`;
const darkImagePath = `../images/logos/dark/${imageName}`;
let image = images[`${imagePath}.svg`];
let darkImage = images[`${darkImagePath}.svg`];
const densities = [];
if (!image) {
  image = images[`${imagePath}.png`];
  darkImage = images[`${darkImagePath}.png`];
  if (!image) {
    throw new Error(`Image ${imageName} not found`);
  }
  const imageWidth = (await image()).default.width;
  if (imageWidth > 184) {
    densities.push(1, 2);
    if (imageWidth > 276) {
      densities.push(3);
    }
  }
}
const alt = `${logoTitleNoSpaces}-Logo`;
---

{
  (
    // @ts-expect-error
    <Card client:load href={href} target="_blank">
      <section>
        <div class="img-wrapper">
          <Image
            class:list={[{ invert: invert, light: darkImage }]}
            src={image()}
            alt={alt}
            width={92}
            height={92}
            densities={densities}
            format="avif"
          />
          {darkImage && (
            <Image
              class="dark"
              src={darkImage()}
              alt={alt}
              width={92}
              height={92}
              densities={densities}
              format="avif"
            />
          )}
        </div>
        <Heading class="title">{title}</Heading>
        <div class="username">{username}</div>
      </section>
    </Card>
  )
}
<style>
  mdui-card {
    margin: 4px;
    width: 100%;
  }
  section {
    padding: 16px;
  }
  .title {
    margin: 0;
  }
  .img-wrapper {
    position: relative;
    margin: calc((50% - 32px) / 3) auto calc((50% + 16px) / 3);
    padding-top: calc((200% + 64px) / 3);
    width: calc((200% + 64px) / 3);
  }
  img {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    object-fit: contain;
  }
  .username {
    color: rgb(var(--mdui-color-on-surface-variant));
  }

  @media (min-width: 321px) {
    mdui-card {
      width: calc(50% - 8px);
    }
  }
  @media (min-width: 469px) {
    mdui-card {
      width: calc(100% / 3 - 8px);
    }
  }
  @media (min-width: 617px) {
    mdui-card {
      width: calc(25% - 8px);
    }
  }
  @media (min-width: 765px) {
    mdui-card {
      width: calc(20% - 8px);
    }
  }
</style>
